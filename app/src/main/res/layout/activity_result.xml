<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_new">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Waiting for incoming calls"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#fcfcfe"
        android:layout_below="@+id/btnSetting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/mycall"
                android:id="@+id/btnCalls"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="My Calls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMyCall"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_below="@+id/btnCalls"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:src="@drawable/mysms"
                android:id="@+id/btnSms"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="My Messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMySms"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_below="@+id/btnSms"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_height="40dp"
        android:id="@+id/btnLogout"
        android:background="@drawable/logout_new"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnSetting"
        android:background="@drawable/settings_new"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
